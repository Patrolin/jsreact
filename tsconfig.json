{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    
    "allowImportingTsExtensions": true,
    "types": ["@types/react"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
  },
  "include": ["node_modules/vite/client.d.ts", "src/**/*"],
  "exclude": ["src/mock/mui-material/**/*"]
}
