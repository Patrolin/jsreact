{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react": ["src/jsreact"],
      "react-dom": ["src/jsreact/index-dom.ts"],
      "react/*": ["src/jsreact"]
    },
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "noEmit": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["node_modules/vite/client.d.ts", "src/**/*"]
}
