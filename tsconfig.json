{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "dist/*": ["dist/*"], "src/*": ["src/*"], "docs/*": ["docs/*"] },
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "src"
  },
  "include": ["node_modules/vite/client.d.ts", "**/*"]
}
