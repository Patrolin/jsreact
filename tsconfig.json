{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "docs/*": ["docs/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "src",
    "skipLibCheck": true
  },
  "include": ["node_modules/vite/client.d.ts", "src/**/*", "docs/**/*"]
}
